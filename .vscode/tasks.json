{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/src/FCGames.API/FCGames.API.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "run",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/FCGames.API/FCGames.API.csproj"
      ],
      "problemMatcher": [],
      "isBackground": false
    },
    {
      "label": "test",
      "type": "process",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/tests/FCGames.Tests/FCGames.Tests.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "test"
    }
  ]
}
